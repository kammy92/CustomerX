<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/text_color_white">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity_margin"
            android:src="@drawable/ic_logo1"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Indiasupply"
            android:textColor="@color/primary_text2"
            android:textSize="@dimen/text_size_large2"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"/>
        <LinearLayout
            android:id="@+id/llQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:gravity="center"
                android:text="What Do You Feel About The Cleanliness Of Clinic?"
                android:textColor="@color/primary_text2"
                android:textSize="@dimen/text_size_large2"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@drawable/circle1"
                    android:src="@drawable/image1"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@drawable/circle2"
                    android:src="@drawable/image2"/>
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@drawable/circle3"
                    android:src="@drawable/image3"/>
                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@drawable/circle4"
                    android:src="@drawable/image4"/>
                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/activity_margin"
                    android:background="@drawable/circle5"
                    android:src="@drawable/image5"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvPowerBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_margin"
            android:gravity="center"

            android:text="Powered by Resultier"
            android:textSize="@dimen/text_size_small"/>
        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/activity_margin"
            android:src="@drawable/ic_setting"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>